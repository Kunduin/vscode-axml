{
  "name": "vscode-axml",
  "displayName": "vscode-axml",
  "description": "Add support for axml file",
  "version": "0.1.4",
  "engines": {
    "vscode": "^1.36.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kunduin/vscode-axml"
  },
  "main": "./client/out/extension",
  "icon": "logo.jpg",
  "author": "Kunduin <kunduin@outlook.com>",
  "publisher": "Kunduin",
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:axml"
  ],
  "contributes": {
    "languages": [
      {
        "id": "axml",
        "aliases": [
          "axml",
          "axml"
        ],
        "extensions": [
          ".axml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "axml",
        "scopeName": "text.xml.axml",
        "path": "./syntaxes/axml.tmLanguage.json",
        "embeddedLanguages": {
          "source.js": "javascript"
        }
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "axml",
        "path": "./snippets/axml.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh",
    "commit": "npx git-cz",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/node": "^8.0.0",
    "cz-conventional-changelog": "3.0.2",
    "semantic-release": "^15.13.18",
    "semantic-release-vsce": "^2.2.8",
    "tslint": "^5.16.0",
    "typescript": "^3.5.3"
  },
  "release": {
    "verifyConditions": [
      "semantic-release-vsce",
      "@semantic-release/github"
    ],
    "prepare": {
      "path": "semantic-release-vsce",
      "packageVsix": "vscode-axml.vsix"
    },
    "publish": [
      "semantic-release-vsce",
      {
        "path": "@semantic-release/github",
        "assets": "vscode-axml.vsix"
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
